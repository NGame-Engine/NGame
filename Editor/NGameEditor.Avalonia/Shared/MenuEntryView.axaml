<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:NGameEditor.ViewModels.Shared;assembly=NGameEditor.ViewModels"
             xmlns:menus="clr-namespace:NGameEditor.ViewModels.Components.Menus;assembly=NGameEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="menus:MenuEntryViewModel"
             x:Class="NGameEditor.Avalonia.Shared.MenuEntryView">
	<MenuItem
		Header="{Binding Header}"
		Command="{Binding Command}"
		ItemsSource="{Binding Children}" />
</UserControl>
