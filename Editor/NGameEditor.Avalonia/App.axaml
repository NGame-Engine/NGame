<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NGameEditor.Avalonia.App"
             xmlns:avalonia="clr-namespace:NGameEditor.Avalonia"
             xmlns:converters="clr-namespace:NGameEditor.Avalonia.Shared.Converters"
             xmlns:menus="clr-namespace:NGameEditor.Avalonia.Components.Menus"
             RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<avalonia:ViewLocator />
	</Application.DataTemplates>

	<Application.Resources>
		<converters:SystemDrawingColorConverter x:Key="SystemDrawingColorConverter" />
		<menus:ContextMenuConverter x:Key="ContextMenuConverter" />
	</Application.Resources>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>
</Application>
